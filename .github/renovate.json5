{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>techneg-it/.github',
    'github>techneg-it/.github:groupManager(github-actions,actions/images)',
    'github>techneg-it/.github:pre-commit',
    'github>techneg-it/.github:weekly',
    ':automergeStableNonMajor',
    ':semanticCommitTypeAll(fix)',
    'customManagers:githubActionsVersions',
  ],
  customDatasources: {
    omnitruck: {
      defaultRegistryUrlTemplate: 'https://omnitruck.chef.io/stable/{{packageName}}/versions/latest',
      transformTemplates: [
        '{"releases": [{ "version": $string($) }] }',
      ],
    },
    'python-versions': {
      defaultRegistryUrlTemplate: 'https://raw.githubusercontent.com/actions/python-versions/refs/heads/main/versions-manifest.json',
      transformTemplates: [
        '{"releases": $ }',
      ],
    },
  },
  packageRules: [
    {
      matchPackageNames: [
        'AleksaC/hadolint-py',
      ],
      versioning: 'loose',
    },
    {
      matchPackageNames: [
        'actions/python-versions',
      ],
      separateMinorPatch: true,
    },
  ],
  platformAutomerge: false,
}
